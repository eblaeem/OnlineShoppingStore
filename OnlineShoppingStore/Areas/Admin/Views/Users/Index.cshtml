@using OnlineShoppingStore.Application.Services.Users.Queries.GetUsers;
@model ResultGetUserDto;


@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<div class="content-wrapper">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <div class="">
                    <h4 class="card-title">لیست کاربران</h4>
                </div>
            </div>
            <div class="card-body collapse show">
                <div class="card-block card-dashboard">
                    <div class="row">
                        <div class="col-sm-12">
                            <table class="table table-striped table-bordered">
                                <thead>
                                    <tr role="row">
                                        <th>نام</th>
                                        <th>ایمیل</th>
                                        <th>عملیات</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.Users)
                                    {
                                        <tr role="row">
                                            <td class="sorting_1">@item.FullName</td>
                                            <td>@item.Email</td>
                                            <td>
                                                <button class="btn btn-outline-primary">ویرایش</button>
                                                <button class="btn btn-outline-danger">حذف</button>
                                                <button class="btn btn-outline-warning">غیر فعال</button>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


