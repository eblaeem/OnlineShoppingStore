@using OnlineShoppingStore.Application.AdminServices.HomePage.Queries.GetPicsForSliderAndBannersInAdmin;
@model List<ResponseGetPicsForSliderAndBannersInAdmin>;

@{
    ViewBag.Title = "لیست تصاویر موجود در اسلایدر";
    Layout = "~/Areas/Admin/Views/Shared/_Adminlayout.cshtml";
}

@section roadMap{
    <div class="d-flex align-items-center main-roadmap">
        <a href="~/Admin/home/dashboard">پنل مدیریت</a>
        <i class="la la-location-arrow"></i>
        <a href="~/admin/home/index">مدیریت اسلایدر</a>
        <i class="la la-location-arrow"></i>
        <h6>لیست تصاویر موجود در اسلایدر</h6>
    </div>
}

<section class="basic-elements">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <div class="card-title-wrap bar-success">
                        <h4>لیست تصاویر موجود در اسلایدر</h4>
                    </div>
                </div>

                <div class="card-body collapse show">
                    <div class="card-block card-dashboard">
                        <div class="row">
                            <div class="col-sm-12">
                                <table class="table table-striped table-bordered">
                                    <thead>
                                        <tr role="row">
                                            <th>عنوان اصلی</th>
                                            <th>عنوان فرعی</th>
                                            <th>توضیحات</th>
                                            <th>محل نمایش</th>
                                            <th>قابلیت نمایش؟</th>
                                            <th>عملیات</th>
                                            <th>تصویر</th>
                                        </tr>
                                    </thead>
                                    <tbody>

                                        @foreach (var item in Model)
                                        {
                                        <tr role="row">
                                            <td class="justify">@item.Title</td>
                                            <td class="justify">@item.PreTitle</td>
                                            <td class="justify" style="width:400px;">@item.Paragraph</td>
                                            <td class="justify">@item.LocationEnum</td>

                                            <td class="justify">@item.IsVisibility</td>
                                            <td>

                                                @if (item.IsVisibility)
                                                {
                                                <button class="btn btn-outline-warning" onclick="ChangeImageVisibility('@item.Id')">عدم نمایش</button>
                                                }
                                                else
                                                {
                                                    <button class="btn btn-outline-primary" onclick="ChangeImageVisibility('@item.Id')"> نمایش</button>
                                                }
                                                <button class="btn btn-outline-danger" onclick="DeleteSliderImage('@item.Id','@item.Title')">حذف</button>
                                            </td>
                                            <td style="width:200px">
                                                <img src="~/@item.Src" style="height:150px; width:150px;" />
                                            </td>
                                        </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section scripts{
    <script src="~/Admin/js/home-controller/index.js"></script>
}
