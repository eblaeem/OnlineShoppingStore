@using OnlineShoppingStore.Areas.Admin.Views.Shared.Components.Header
@using OnlineShoppingStore.Areas.Admin.Views.Shared.Components.Customizer
@using OnlineShoppingStore.Areas.Admin.Views.Shared.Components.Footer

<html class="loaded" lang="en" data-textdirection="rtl">
<!-- ============================================================== -->
<!-- BEGIN: Head-->
<!-- ============================================================== -->
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=0, minimal-ui">
    <meta name="keywords" content="admin template, modern admin template, dashboard template, flat admin template, responsive admin template">
    <meta name="author" content="PIXINVENT">
    <title>Dashboard eCommerce - Modern Admin - Clean Bootstrap 4 Dashboard HTML Template + Bitcoin Dashboard</title>

    <link href="~/Admin/css/AdminStyles.css" rel="stylesheet" />
    <link href="~/Admin/css/main/fonts.css" rel="stylesheet" />
</head>

<!-- ============================================================== -->
<!-- END: Head-->
<!-- ============================================================== -->
<!-- ============================================================== -->
<!-- BEGIN: Body-->
<!-- ============================================================== -->

<body class="vertical-layout vertical-content-menu fixed-navbar pace-done menu-collapsed">

    <!-- ============================================================== -->
    <!-- BEGIN: Header -->
    <!-- ============================================================== -->
    @await Component.InvokeAsync(typeof(Header))
    <!-- ============================================================== -->
    <!-- END: Header -->
    <!-- ============================================================== -->
    <!-- ============================================================== -->
    <!-- BEGIN: Content-->
    <!-- ============================================================== -->

    <div class="app-content content">
        <div class="content-overlay"></div>
        <div class="content-wrapper">
            <div class="content-header row">
            </div>
            <!-- ============================================================== -->
            <!-- BEGIN: Main Menu-->
            <!-- ============================================================== -->
            <div class="main-menu menu-static menu-light menu-accordion menu-shadow"
                 data-scroll-to-active="true" style="touch-action: none; user-select: none;
                -webkit-user-drag: none; -webkit-tap-highlight-color: rgba(0, 0, 0, 0);">
                <div class="main-menu-content">
                    <ul class="navigation navigation-main" id="main-menu-navigation" data-menu="menu-navigation">
                        <li class="nav-item has-sub">
                            <a href="javascript: void(0);">
                                <i class="la la-home"></i>
                                <span class="menu-title">پنل مدیریت</span>
                            </a>
                            <ul class="menu-content">
                                <li>
                                    <a class="menu-item" asp-area="Admin"
                                       asp-controller="Home" asp-action="Dashboard">
                                        <i></i>
                                        <span>داشبورد</span>
                                    </a>
                                </li>
                            </ul>
                        </li>

                        <li class="nav-item has-sub">
                            <a href="javascript: void(0);">
                                <i class="la la-user"></i>
                                <span class="menu-title">مدیریت کاربران</span>
                            </a>
                            <ul class="menu-content">
                                <li>
                                    <a class="menu-item" asp-area="Admin"
                                       asp-controller="Users" asp-action="Create">
                                        <i></i>
                                        <span>ایجاد کاربر جدید</span>
                                    </a>
                                </li>

                                <li>
                                    <a class="menu-item" asp-area="Admin"
                                       asp-controller="Users" asp-action="Index">
                                        <i></i>
                                        <span>لیست کاربران</span>
                                    </a>
                                </li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </div>

            <!-- ============================================================== -->
            <!-- END: Main Menu-->
            <!-- ============================================================== -->
            <!-- ============================================================== -->
            <!-- BEGIN: RenderBody-->
            <!-- ============================================================== -->
            <div class="content-body">
                <div class="row">
                    @RenderBody()
                </div>
            </div>
            <!-- ============================================================== -->
            <!-- END: RenderBody-->
            <!-- ============================================================== -->
        </div>
    </div>


    <!-- ============================================================== -->
    <!-- END: Content-->
    <!-- ============================================================== -->
    <!-- ============================================================== -->
    <!-- BEGIN: Customizer-->
    <!-- ============================================================== -->
    @await Component.InvokeAsync(typeof(Customizer))
    <!-- ============================================================== -->
    <!-- End: Customizer-->
    <!-- ============================================================== -->
    <!-- ============================================================== -->
    <!-- BEGIN: Footer-->
    <!-- ============================================================== -->
    @await Component.InvokeAsync(typeof(Footer))
    <!-- ============================================================== -->
    <!-- END: Footer-->
    <!-- ============================================================== -->
    <!-- ============================================================== -->
    <!-- BEGIN: Scripts->
    <!-- ============================================================== -->
    <script src="~/Admin/js/AdminScripts.js"></script>
    @await RenderSectionAsync("scripts", required: false)
    <!-- ============================================================== -->
    <!-- END: Scripts-->
    <!-- ============================================================== -->
</body>
<!-- ============================================================== -->
<!-- END: Body-->
<!-- ============================================================== -->
</html>
