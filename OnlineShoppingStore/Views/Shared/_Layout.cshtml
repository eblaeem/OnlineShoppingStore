@using OnlineShoppingStore.Views.Shared.Components.CartViewInHeader
@using OnlineShoppingStore.Views.Shared.Components.AboutUsInFooter
@using OnlineShoppingStore.Views.Shared.Components.GetMenuList
@using OnlineShoppingStore.Views.Shared.Components.SearchBox

<!DOCTYPE html>
<html lang="fa">

<head>
    <title>شهر شمع</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="~/css/site-style.css" rel="stylesheet" />
    <link href="~/css/main.css" rel="stylesheet" />
    @RenderSection("styles", required: false)
</head>

<body>
   
    <!-- Start Top Nav -->
    <nav class="navbar navbar-expand-lg bg-dark navbar-light d-none d-lg-block">
        <div class="container text-light">
            <div class="w-100 d-flex justify-content-between">
                <div>
                    <a class="text-light" href="#" target="_blank" rel="sponsored"><i class="fa fa-whatsapp fa-sm fa-fw me-2"></i></a>
                    <a class="text-light" href="#" target="_blank"><i class="fa fa-instagram fa-sm fa-fw me-2"></i></a>
                    <a class="text-light" href="#" target="_blank"><i class="fa fa-telegram fa-sm fa-fw me-2"></i></a>
                </div>
                <div>
                    <a class="navbar-sm-brand text-light text-decoration-none" href="mailto:info@company.com">info@company.com</a>
                    <i class="fa fa-envelope mx-2"></i>
                    <a class="navbar-sm-brand text-light text-decoration-none" href="tel:010-020-0340">010-020-0340</a>
                    <i class="fa fa-phone mx-2"></i>
                </div>
            </div>
        </div>
    </nav>
    <!-- Close Top Nav -->
    <!-- Header -->
    <nav class="navbar navbar-expand-lg navbar-light shadow">
        <div class="container d-flex justify-content-between align-items-center">

            <button class="navbar-toggler border-0" type="button" data-bs-toggle="collapse" data-bs-target="#templatemo_main_nav" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="align-self-center collapse navbar-collapse flex-fill  d-lg-flex justify-content-lg-between" id="templatemo_main_nav">
                <div class="flex-fill ">
                    <div class="d-lg-none flex-sm-fill mt-3 mb-4 col-7 col-sm-auto pr-3">
                        <div class="input-group">
                            <input type="text" class="form-control" id="inputMobileSearch" placeholder="Search ...">
                            <div class="input-group-text">
                                <i class="fa fa-search"></i>
                            </div>
                        </div>
                    </div>

                    <a class="nav-icon d-none d-lg-inline mr-10" href="#"
                       data-bs-toggle="modal" data-bs-target="#templatemo_search">
                        <i class="fa fa-search text-dark mr-2"></i>
                    </a>

                        @await Component.InvokeAsync(typeof(CartViewInHeader))
                 
                </div>

                <ul class="align-items-center d-flex flex-row-reverse justify-content-center navbar-nav">
                    <li>
                        <a href="#" class="text-decoration-none">
                            خانه
                        </a>
                    </li>

                    <li class="d-flex flex-row-reverse">
                        @await Component.InvokeAsync(typeof(GetMenuList))
                    </li>

                    <li>
                        <a href="#" class="text-decoration-none">
                            درباره‌ما
                        </a>
                    </li>

                    <li style="margin-right: 10px;">
                        <a href="#" class="text-decoration-none">
                            تماس باما
                        </a>
                    </li>
                </ul>

            </div>

        </div>
    </nav>
    <!-- Close Header -->

    @await Component.InvokeAsync(typeof(SearchBox))

    @RenderBody()

    <!-- Start Footer -->
    <footer class="bg-dark" id="tempaltemo_footer">
        <div class="container">
            <div class="row" style="direction:rtl">

                @await Component.InvokeAsync(typeof(AboutUsInFooter))

                <div class="col-md-4 pt-5">
                    <h2 class="h2 text-light border-bottom pb-3 border-light">Products</h2>
                    <ul class="list-unstyled text-light footer-link-list">
                        <li><a class="text-decoration-none" href="#">Luxury</a></li>
                    </ul>
                </div>

                <div class="col-md-4 pt-5">
                    <h2 class="h2 text-light border-bottom pb-3 border-light">Further Info</h2>
                    <ul class="list-unstyled text-light footer-link-list">
                        <li><a class="text-decoration-none" href="#">Home</a></li>
                    </ul>
                </div>

            </div>

            <div class="row text-light mb-4 rtl">
                <div class="col-12 mb-3">
                    <div class="w-100 my-3 border-top border-light"></div>
                </div>
                <div class="col-auto">
                    <ul class="list-inline text-left footer-icons">
                        <li class="list-inline-item border border-light rounded-circle text-center">
                            <a class="text-light text-decoration-none" target="_blank" href="#"><i class="fa fa-whatsapp fa-lg fa-fw"></i></a>
                        </li>
                        <li class="list-inline-item border border-light rounded-circle text-center">
                            <a class="text-light text-decoration-none" target="_blank" href="#"><i class="fa fa-instagram fa-lg fa-fw"></i></a>
                        </li>
                        <li class="list-inline-item border border-light rounded-circle text-center">
                            <a class="text-light text-decoration-none" target="_blank" href="#"><i class="fa fa-telegram fa-lg fa-fw"></i></a>
                        </li>
                    </ul>
                </div>

                <div class="col-auto me-auto ltr">
                    <label class="sr-only" for="subscribeEmail">Email address</label>
                    <div class="input-group mb-2">
                        <input type="text" class="form-control bg-dark border-light rtl text-white"
                               id="subscribeEmail" placeholder="ایمیل خود را وارد نمایید.">
                        <div class="input-group-text btn-success text-light">اشتراک گذاری</div>
                    </div>
                </div>
            </div>
        </div>

        <div class="w-100 bg-black py-3">
            <div class="container">
                <div class="row pt-2">
                    <div class="col-12">
                        <p class="text-left text-light">
                            Copyright &copy; 2021 Company Name
                            | Designed by <a rel="sponsored" href="https://templatemo.com" target="_blank">TemplateMo</a>
                        </p>
                    </div>
                </div>
            </div>
        </div>

    </footer>
    <!-- End Footer -->
    <!-- Start Script -->
    <script src="~/js/site-scripts.js"></script>
    <script src="~/js/main.js"></script>
    <script>
       


        $(document).ready(function() {
            $('#cartView').hide();
            $('.cart-arrow-down').click(function () {
                $('#cartView').toggle();
            });
        });
    </script>
    @RenderSection("scripts", required: false)
    <!-- End Script -->

</body>

</html>