@model OnlineShoppingStore.Models.ViewModels.AuthenticationViewModel.SignInViewModel

@{
    ViewData["Title"] = "ورود";
    Layout = null;
}

<!DOCTYPE html>

<html lang="fa" dir="rtl">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="~/css/SiteStyles.css" rel="stylesheet" />
    <link href="~/css/Main.css" rel="stylesheet" />
    <link href="~/css/Responsive.css" rel="stylesheet" />
    <link href="~/css/signup/signup.css" rel="stylesheet" />
    <link href="~/css/fonts.css" rel="stylesheet" />
</head>

<body>
    <!-- login----------------------------------->
    <div class="container">
        <div class="row">
            <div class="col-lg">
                <section class="page-account-box">
                    <div class="col-lg-6 col-md-6 col-xs-12 mx-auto">
                        <div class="ds-userlogin">
                            <a href="~/" class="account-box-logo">کالا مارکت</a>
                            <div class="account-box">
                                <div class="account-box-headline">
                                    <a href="~/authentication/signin" class="login-ds active">
                                        <span class="title">ورود</span>
                                    </a>
                                    <a href="~/authentication/signup">
                                        <span class="title">ثبت نام</span>
                                    </a>
                                </div>
                                <div class="Login-to-account mt-4">
                                    <div class="account-box-content">
                                        <h4 class="mb-0">ورود به حساب کاربری</h4>

                                        <form method="post" asp-controller="Authentication" asp-action="SignIn" class="form-account text-right">

                                            <div class="form-account-title">
                                                <label class="text-info float-end">ایمیل</label>
                                                <input type="email" class="form-control" asp-for="Email">
                                                <span asp-validation-for="Email"></span>
                                            </div>

                                            <div class="form-account-title">
                                                <label class="text-info float-end">رمز عبور</label>
                                                <input type="password" class="form-control" asp-for="Password">
                                                <span asp-validation-for="Password"></span>
                                                <a href="#" class="account-link-password">رمز خود را فراموش کرده ام</a>
                                            </div>

                                            <div class="form-auth-row">
                                                <label for="#" class="ui-checkbox mt-1">
                                                    <input type="checkbox" value="1" name="login" id="remember">
                                                    <span class="ui-checkbox-check"></span>
                                                </label>
                                                <label for="remember" class="remember-me mr-0">مرا به خاطر بسپار</label>
                                            </div>

                                            <div class="form-row-account">
                                                <button class="btn-login" type="submit">ورود</button>
                                            </div>

                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </section>
            </div>
        </div>
    </div>
    <!-- login----------------------------------->
    <!-- scroll_Progress------------------------->
    <div class="progress-wrap">
        <svg class="progress-circle svg-content" width="100%" height="100%" viewBox="-1 -1 102 102">
            <path d="M50,1 a49,49 0 0,1 0,98 a49,49 0 0,1 0,-98" />
        </svg>
    </div>
    <!-- scroll_Progress------------------------->

</body>
</html>
